@model Nocturno.Data.Models.Service
@{
    int index = 0;

    <div class="col-lg-12">
        <ul id="myTab" class="nav nav-tabs nav-justified">
            @{ index = 0; }
            @foreach (var item in Model.CollectionItems)
            {
                index++;
                <li class="active">
                    <a href="#service(@index)" data-toggle="tab"><i class="fa fa-tree"></i> @item.Name</a>
                </li>
            }
        </ul>
        <div id="myTabContent" class="tab-content">
            @{ index = 0; }
            @foreach (var item in Model.CollectionItems)
            {
                index++;
                <div class="tab-pane fade active in" id="service(@index)">
                    <h4>@item.Name</h4>
                    <p>@Html.Raw(item.Text)</p>
                </div>
            }
        </div>
    </div>
</div>