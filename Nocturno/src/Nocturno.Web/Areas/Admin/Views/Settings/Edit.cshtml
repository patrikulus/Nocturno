@model Nocturno.Data.Models.Setting

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <i class="fa fa-fw fa-cog"></i>
            @ViewData["Title"] <small>setting</small>
        </h1>
    </div>
</div>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IsMandatory" />
        <input type="hidden" asp-for="Name" />

        <div class="form-group">
            <label class="col-md-2 control-label">@Model.Name</label>
            <div class="col-md-10">

                @if (Model.Name == "Site theme")
                {
                    <select asp-for="Value" asp-items="@ViewBag.Themes" class="form-control"></select>
                }
                else
                {
                    <input asp-for="Value" class="form-control" />

                }
                <span asp-validation-for="Value" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}