@model Nocturno.Web.Areas.Admin.ViewModels.SettingsViewModel

@{
    ViewData["Title"] = "Settings";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <i class="fa fa-fw fa-cog"></i>
            @ViewData["Title"]
        </h1>
    </div>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Value
        </th>
    </tr>

    <tr>
        <td>
            Site name:
        </td>
        <td>
            @Model.AppSettings.SiteName
        </td>
    </tr>
    <tr>
        <td>
            Logo:
        </td>
        <td>
            <img src="~/uploads/@Model.AppSettings.SiteLogo" style="max-width: 300px; max-height: 150px;" />
        </td>
    </tr>
    <tr>
        <td>
            Theme:
        </td>
        <td></td>
    </tr>
    <tr>
        <td>
            Admin Theme:
        </td>
        <td></td>
    </tr>
</table>