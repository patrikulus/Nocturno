@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm"></form>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.GetUserName()<b class="caret"></b></a>

            <ul class="dropdown-menu">
                <li>
                    <a asp-controller="Manage" asp-action="Index"><i class="fa fa-fw fa-user"></i> Profile</a>
                </li>
                @*<li>
                        <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                    </li>*@
                <li>
                    <a asp-controller="Settings" asp-action="Index"><i class="fa fa-fw fa-gear"></i> Settings</a>
                </li>
                <li class="divider"></li>
                <li>

                    @*<button type="submit" class="btn btn-primary">Log Out</button>*@
                    <a href="#" onclick="$('#logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log Out</a>

                    @*<a href="#"><i class="fa fa-fw fa-power-off"></i> Log Out</a>*@
                </li>
            </ul>

        </li>
    
}
else
{
    <li>
        <a asp-controller="Account" asp-action="Login"><i class="fa fa-user"></i> Log in</a>
    </li>
}