@using Nocturno.Data.ViewModels
@model Nocturno.Data.ViewModels.SectionViewModel
@{
    ViewData["Title"] = "Sections";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <i class="fa fa-fw fa-puzzle-piece"></i>
            @ViewData["Title"]
        </h1>
    </div>
</div>

<h2>Select</h2>

<form asp-action="Index">
    <div class="form-horizontal">
        <h4>Page</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PageId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PageId" asp-items="@ViewBag.Pages" class="form-control"></select>
                <span asp-validation-for="PageId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>