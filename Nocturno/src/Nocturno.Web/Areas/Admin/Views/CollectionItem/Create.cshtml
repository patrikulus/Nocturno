@model Nocturno.Data.Models.CollectionItem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <i class="fa fa-fw fa-cubes"></i>
            @ViewData["Title"] <small>collection item</small>
        </h1>
    </div>
</div>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Synopsis" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Synopsis" class="form-control" />
                <span asp-validation-for="Synopsis" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Text" class="form-control" id="textarea"></textarea>
                <span asp-validation-for="Text" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hyperlink" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Hyperlink" class="form-control" />
                <span asp-validation-for="Hyperlink" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Icon" class="col-md-2 control-label"></label>
            <div class="col-md-1 text-center" id="iconContainer"></div>
            <div class="col-md-9">
                <select asp-for="Icon" asp-items="@ViewBag.Icons" class="form-control" id="iconControl"></select>
                <span asp-validation-for="Icon" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Collection" asp-s class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CollectionId" asp-items="@ViewBag.Collections" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap3-wysihtml5-bower/dist/bootstrap3-wysihtml5.all.min.js"></script>
    <script>
        $('#textarea').wysihtml5();
        $('#iconControl').change(function () {
            updateIcon();
        });

        var updateIcon = function () {
            $('#iconContainer').html('<i class="fa fa-3x ' + $('#iconControl').val() + '"></i>');
        }
        updateIcon();
    </script>
}